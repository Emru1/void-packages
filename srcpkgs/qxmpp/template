# Template file for 'qxmpp'
pkgname=qxmpp
version=1.10.1
revision=1
build_style=cmake
configure_args="-DBUILD_EXAMPLES=false -DBUILD_OMEMO=true -DWITH_GSTREAMER=true
 -DWITH_QCA=true"
hostmakedepends="pkg-config"
makedepends="qt6-base-devel qt6-qt5compat-devel opus-devel speex-devel
 libtheora-devel libvpx-devel libomemo-c-devel gstreamer1-devel qca-qt6-devel"
short_desc="Cross-platform C++ XMPP client and server library"
maintainer="Orphaned <orphan@voidlinux.org>"
license="LGPL-2.1-or-later"
homepage="https://github.com/qxmpp-project/qxmpp/"
distfiles="https://github.com/qxmpp-project/qxmpp/archive/v${version}.tar.gz>${pkgname}-${version}.tar.gz"
checksum=a9e95847c432cbf9ad36aa6d1596d66aa8f644d6983926457235fb64343bc42c

build_options="opus speex theora vpx"
build_options_default="opus speex theora vpx"
desc_option_opus="Enable Opus audio codec"
desc_option_speex="Enable Speex audio codec"
desc_option_theora="Enable Theora video codec"

if [ -z "$XBPS_CHECK_PKGS" ]; then
	configure_args+=" -DBUILD_TESTS=false"
else
	configure_args+=" -DBUILD_TESTS=true"
fi

if [ -n "$CROSS_BUILD" ]; then
	hostmakedepends+=" qt6-base"
fi

qxmpp-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.so
		vmove usr/lib/pkgconfig
		vmove usr/lib/cmake
	}
}
